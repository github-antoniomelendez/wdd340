<h1>
    <%= title  %>
</h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
<!-- Register Form -->
<form action="/account/register" class="login" method="POST" class="register-form">
    <label for="account_firstname">First Name:<span class="red-star">*</span></label><br>
    <input type="text" class="emaillog" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>"><br>
    <label for="account_lastname">Last Name:<span class="red-star">*</span></label><br>
    <input type="text" id="account_lastname" class="emaillog" name="account_lastname" required value="<%= locals.account_lastname %>"><br>
    <label for="account_email">Email Address:<span class="red-star">*</span></label><br>
    <input type="email" id="account_email" class="emaillog" name="account_email" required value="<%= locals.account_email %>"><br>

    <div>
        <label for="account_password">Password:<span class="red-star">*</span></label><br>
        <input type="password" id="account_password" class="passwordlog" name="account_password"
            required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    </div>

    <button type="submit" class="register-btn">Register</button>
</form>
