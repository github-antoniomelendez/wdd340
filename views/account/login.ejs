<h1>
    <%= title  %>
</h1>

<!-- Display Flash msg -->
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<!-- Login Form -->
<form id="loginForm"  class="login" action="/account/login" method="post">
    <label for="account_email">Email Address:<span class="red-star">*</span></label><br>
    <input type="email" id="account_email"  class="emaillog" name="account_email" requiredplaceholder="Enter a valid email address" value="<%= locals.account_email %>">
    <div>
        <label for="account_password">Password:<span class="red-star">*</span></label><br>
        <input type="password" id="account_password" class="passwordlog" name="account_password"
            required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    </div>

    <button type="submit" class="login-btn">Login</button>
    <!-- Registration Link -->
<p>Don't have an account? <a class="reghere" href="/account/register">Register here</a></p> <!-- refer client back to register form -->
</form>
